    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f9fa; /* Light gray background */
        color: #424242; /* Dark gray for text */
      }

      header {
        background-color: #1a936f; /* Dark green */
        padding: 15px 0;
      }

      nav {
        background-color: #1a936f; /* Dark green */
        color: #fff;
      }

      nav a {
        color: #fff;
        text-decoration: none;
        margin-right: 20px;
      }

      .center {
        justify-content: center;
        display: flex;
      }

      .logo a {
        text-decoration: none;
        color: #fff;
        font-weight: bold;
        font-size: 16px;
      }

      .right-menu {
        margin-left: auto;
      }

      .right-menu a {
        text-decoration: none;
        color: #f0a6ca; /* Light pink color */
        font-weight: bold;
        font-size: 16px;
        margin-left: 20px;
      }

      .right-menu a:hover {
        border-bottom: 2px solid #fff;
      }
      main {
        margin: 20px; /* Add margin to the main element */
        padding: 20px; /* Add padding to the main element */
      }

      h1 {
        text-align: center;
        font-style: italic;
        color: #333; /* Dark gray for headings */
      }

      p {
        text-align: justify;
        line-height: 1.6;
        color: #555;
      }

      footer {
        background-color: #1a936f; /* Dark green */
        color: #ddd;
        padding: 15px 0;
        text-align: center;
        bottom: 0;
        width: 100%;
      }

      footer p {
        color: #989181;
      }

      .team-members {
        display: flex;
        justify-content: space-around;
        margin-top: 30px;
      }

      .team-member {
        text-align: center;
        width: 200px; /* Adjust the width as needed */
        margin: 10px;
        transition: transform 0.3s ease-in-out;
      }

      .team-member img {
        width: 100%; /* Make the images fill the container */
        border-radius: 50%;
        transition: transform 0.3s ease-in-out;
      }

      .team-member h3 {
        margin-top: 10px;
        color: #3c393d;
      }

      .team-member p {
        color: #555;
      }

      .team-member:hover {
        transform: scale(1.1); /* Add a slight scale effect on hover */
      }

      .team-member:hover img {
        filter: brightness(80%); /* Reduce brightness on hover */
      }

      .team-members {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap; /* Allow wrapping to the next line */
        margin-top: 30px;
      }

      .team-member img {
        width: 250px;
        height: 250px;
        border-radius: 50%;
        transition: transform 0.3s ease-in-out;
      }
    </style>
  </head>

